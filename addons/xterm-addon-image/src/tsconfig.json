{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "../out",
    "rootDir": ".",
    "strict": true,
    "noUnusedLocals": true,
    "preserveWatchOutput": true,
    "types": [
      "../../../node_modules/@types/mocha"
    ],
    "baseUrl": ".",
    "paths": {
      "common/*": [ "../../../src/common/*" ],
      "browser/*": [ "../../../src/browser/*" ]
    },
  },
  "include": [
    "./**/*",
    "../../../typings/xterm.d.ts",
    "../../../src/browser/Types.d.ts"
  ],
  "references": [
    { "path": "../../../src/common" },
    { "path": "../../../src/browser" }
  ]
}
